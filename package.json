  ],     
  "repository": { "type": "git", "url": "http://github.com/jeffbski/tapper.git" }, 
  "bugs" : { "url": "http://github.com/jeffbski/tapper/issues" }, 
  "licenses": [{ "type": "MIT", "url" : "http://github.com/jeffbski/tapper/raw/master/LICENSE" }],
  "main": "lib/tapper",
  "bin" : "bin/tapr.js",
  "engines": { "node": "~v0.4.12" },
  "dependencies": {
    "cli-color": "~0.1.4",
    "sprintf": "~0.1.1",
    "tap": "~0.1.0",
    "inherits" : "~1.0.0",
    "yamlish" : "~0.0.2",
    "slide": "1.1.3",
